---
import { Image } from "astro:assets";
import type { Enlace } from "../types";

interface Props {
  nombre: string;
  descripcion: string;
  enlaces: Enlace[];
  tecnologias: string[];
  imagen: string;
}
const { nombre, descripcion, enlaces, tecnologias, imagen } = Astro.props;
import meLocalImage from "../assets/images/me.jpeg";

function cutDescription(description: string): string {
  return description.length > 100
    ? `${description.slice(0, 100)}...`
    : description;
}
---

<div class="relative max-w-sm overflow-hidden rounded-lg shadow">
  <div class="absolute inset-0 bg-white/5 backdrop-blur-md"></div>
  <a href="#" class="relative z-10">
    <Image src={meLocalImage} alt="imagen" />
  </a>
  <div class="relative p-5 z-10">
    <a href="#">
      <h5 class="mb-2 text-2xl font-bold tracking-tight">
        {nombre}
      </h5>
    </a>
    <p class="mb-3 font-normal">
      {cutDescription(descripcion)}
    </p>
    <a
      href="#"
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Read more
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
    {
      enlaces.map((enlace) => (
        <a
          href="#"
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          {enlace.nombre}
          <svg
            class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      ))
    }
  </div>
</div>
